package ac.scggi.app;

public class Car {
	String manufacturer;//제조사
	String color;
	int price;
	String oilType;
	String transType;
	String name;
	// 생성자, 생성자 함수(constructor)
	// 인스턴스를 생성할 때 실행되는 함수.
	// 생성자 함수는 리턴형이 없음
	public Car() {};
	public Car(String manufacturer, String color, int price, String oilType, String transType, String name) {
		// this는 명시적으로 인스턴스 변수를 접근
		// shadowing : 변수의 이름이 동일한 경우, 인스턴스 변수가 지역변수에 의해서 가려지는 것.
		this.manufacturer = manufacturer;
		this.color = color;
		this.price = price;
		this.oilType = oilType;
		this.transType = transType;
		this.name = name;
	}
	// 인스턴수 함수
	public void showInfo() {
		System.out.println(manufacturer);
		System.out.println(color);
		System.out.println(price);
		System.out.println(oilType);
		System.out.println(transType);
		System.out.println(name);
	}
}
